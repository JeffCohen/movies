<h1>Movie Database</h1>

<% the_id = params["id"] %>

<% director = Director.read(the_id) %>

<% movies = Movie.read("director_id" => director["id"]) %>

<hr>

<h2>Director: <%= director["name"] %></h2>

<h4>Filmography</h4>

<ul>

  <% movies.each do |movie| %>

    <li>
      <strong><%= movie["title"] %></strong> (<%= movie["year"] %>).
    </li>

  <% end %>

</ul>

<% movies.each do |movie| %>
  <img src="<%= movie["poster_url"] %>" width="120">
<% end %>

